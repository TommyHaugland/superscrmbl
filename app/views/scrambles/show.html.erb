<div class="row-fluid" id="scramble">
	<div class="span12"> <!-- Image, price and milestone view. -->

		<div class="span6">
		
<%= image_tag @scramble.image(:medium) %>

    </div>

    <div class="span6" id="pricemodule">
<div id="progress_bar"></div>
    <h3>
 <%= number_to_currency(@scramble.price) %>
    </h3>
    <div id="noDays"></div> 
   

   <%= link_to "Reserve this scramble", new_scramble_order_path(@scramble), class: "btn btn-success btn-large" %>

    </div>
</div>
 <div class="span12"> <!-- Title, description and retailer view. -->
   <div class="span8">
    <h2>
  	  <%= @scramble.title %>
    </h2>

	<p>
	  <%= simple_format @scramble.description %>
	</p>
  </div>

 <div class="span4">
	<p>
	  <%= image_tag @scramble.user.avatar(:thumb), id: "avatarshow" %> <%= @scramble.user.name %> <br><i><small>
	  "<%= @scramble.user.description %>"
	</small></i>
	</p>


	<% if current_user == @scramble.user %>
		
	<%= link_to 'Edit', edit_scramble_path(@scramble), class: "btn btn-primary" %>

	<% end %>

	</div>
  </div>
</div>

<div id="powered">

  <center><strong> Powered by <%= link_to "ScrambleBox", root_path %>. </strong></center>

</div>